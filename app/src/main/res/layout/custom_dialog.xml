<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w50"
        android:gravity="center"
        android:padding="5dp"
        android:text="รายละเอียดสินทรัพย์แบบย่อ"
        android:textColor="@color/colorBack"
        android:textSize="@dimen/size18"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="กรอกรายละเอียด"
        android:textSize="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/dialog_positive_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#6ec6ffa3"
            android:text="ยืนยัน"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialog_negative_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:background="#6efff9a3"
            android:text="ยกเลิก"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>